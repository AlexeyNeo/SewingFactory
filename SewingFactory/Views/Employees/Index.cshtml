@model IEnumerable<SewingFactory.Models.Employees>

@{
    ViewBag.Title = "Сотрудники";
}

<h2>Сотрудники</h2>

<p>
    <a class="btn btn-primary" href="/Employees/Create">Добавить сотрудника</a>
    <a class="btn btn-success" href="/PostEmpl">Должности</a>
</p>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Список всех сотрудников</div>

        <table class="table table-condensed table-hover">
            <thead>
                <tr>
                    <th>
                        ФИО
                    </th>
                    <th>
                        Телефон
                    </th>
                    <th>
                        Должность
                    </th>
                    <th>
                        Рабочая группа
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.FullName, "report", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostEmploees.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkingGroup1.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Подробно", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
    <a href="/Home/" class="btn btn-default">Назад </a>
