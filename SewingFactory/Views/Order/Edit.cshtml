@model SewingFactory.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Заказ</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Costomer, "Заказчик", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Costomer", String.Empty)
                @Html.ValidationMessageFor(model => model.Costomer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Название", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WorkingGroup, "Рабочая группа", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("WorkingGroup", String.Empty)
                @Html.ValidationMessageFor(model => model.WorkingGroup)
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Date)
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity,"Объем заказа", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.DateOfCompletion)
                @Html.ValidationMessageFor(model => model.DateOfCompletion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, "Модель", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Model", String.Empty)
                @Html.ValidationMessageFor(model => model.Model)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Size,"Линейка размеров", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Size)
                @Html.ValidationMessageFor(model => model.Size)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost,"Стоимость за еденицу", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost)
                @Html.ValidationMessageFor(model => model.Cost)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sum,"Общая сумма заказа",new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sum)
                @Html.ValidationMessageFor(model => model.sum)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Done,"Выполенно", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Done)
                @Html.ValidationMessageFor(model => model.Done)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status,"Статус", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Order/" class="btn btn-default">Назад </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
