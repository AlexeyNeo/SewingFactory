@model SewingFactory.Models.EmploeesOrder

@{
    ViewBag.Title = "Редактировать";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Управление выполнением заказа</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.EmploeesId, "Сотрудник", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmploeesId", String.Empty)
                @Html.ValidationMessageFor(model => model.EmploeesId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderId, "Заказ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OrderId", String.Empty)
                @Html.ValidationMessageFor(model => model.OrderId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Done, "Обработано", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Done)
                @Html.ValidationMessageFor(model => model.Done)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/EmploeesOrder/" class="btn btn-default">Назад </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
