@model SewingFactory.Models.PostOrder

@{
    ViewBag.Title = "Управление зарплатой";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.OrderId, "Заказ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OrderId", String.Empty)
                @Html.ValidationMessageFor(model => model.OrderId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostEmploees, "Должность", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PostEmploees", String.Empty)
                @Html.ValidationMessageFor(model => model.PostEmploees)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Payment,"Цена за еденицу",  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Payment)
                @Html.ValidationMessageFor(model => model.Payment)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Установить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/PostOrder/PostOrder/@Model.OrderId" class="btn btn-default">Назад </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
