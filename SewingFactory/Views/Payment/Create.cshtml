@model SewingFactory.Models.PaymentHistory

@{
    ViewBag.Title = "Выплатить";
}

<h2>Выплатить зарплату</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <p>Вы должны выплатить еще: @ViewBag.Pay Сом.</p>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.Hidden("SalaryId")
               
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Date, "Дата", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                 
                <input type="date" class="text-box single-line" id="Date" name="Date">
                
            </div>
        </div>
           
        <div class="form-group">
            @Html.LabelFor(model => model.Sum, "Сумма выплаты", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sum)
                @Html.ValidationMessageFor(model => model.Sum)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Выплатить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Payment/" class="btn btn-default">Назад </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
