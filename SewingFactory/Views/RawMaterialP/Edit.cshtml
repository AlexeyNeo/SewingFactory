@model SewingFactory.Models.RawMaterialP

@{
    ViewBag.Title = "Редактировать";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
   
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.RawMaterial, "Материал", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RawMaterial", String.Empty)
                @Html.ValidationMessageFor(model => model.RawMaterial)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, "Модель", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Model", String.Empty)
                @Html.ValidationMessageFor(model => model.Model)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, "Объем сырья" , new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/RawMaterialP/Index/@Model.Model1.Id" class="btn btn-default">Назад </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
